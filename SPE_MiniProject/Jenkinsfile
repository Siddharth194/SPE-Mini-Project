pipeline {
    agent any

    triggers {
        githubPush()
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Siddharth194/SPE-Mini-Project.git',
                    credentialsId: 'github_token'
            }
        }

        stage('Build') {
            steps {
                echo "Running Maven clean & compile..."
                dir('SPE_MiniProject') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage('Run Tests') {
            steps {
                echo "Running JUnit tests..."
                dir('SPE_MiniProject') {
                    sh 'mvn test'
                }
            }
        }

        stage('Package') {
            steps {
                echo "Building JAR..."
                dir('SPE_MiniProject') {
                    sh 'mvn package'
                }
            }
        }
    }

    post {
        success {
            echo "✅ Build, Test & Package Successful!"
        }
        failure {
            echo "❌ Build failed. Check console output."
        }
    }
}

